<Window x:Class="VideoGadget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoGadget"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" Width="800" 
        Loaded="Window_Loaded" 
        Closing="Window_Closing"
        MouseDown="Window_MouseDown"
        MouseMove="MouseMoveHandler" 
        AllowDrop="True" 
        DragOver="Window_DragOver" 
        Drop="Window_Drop" WindowStyle="None"
        ResizeMode="CanResizeWithGrip" AllowsTransparency="True">
    <Grid>
        <MediaElement x:Name="MainMadiaElement" 
                      Margin="1,1,1,1" 
                      MouseDown="MainMadiaElement_MouseDown" 
                      MediaEnded="MainMadiaElement_MediaEnded"/>
        <Slider x:Name="VolumeSlider"
                TickPlacement="Both"
                Foreground="Black"
                Margin="0,100,10,100"
                IsSnapToTickEnabled="False"
                TickFrequency="10"
                SmallChange="2"
                LargeChange="5"
                Minimum="0"
                Maximum="100"
                ValueChanged="VolumeSlider_ValueChanged"
                MouseEnter="VolumeSlider_MouseEnter"
                MouseLeave="VolumeSlider_MouseLeave"
                Orientation="Vertical" 
                HorizontalAlignment="Right" 
                Width="30"/>
        <Slider x:Name="SeekbarSlider" 
                Margin="10,0,10,10" Height="18" 
                VerticalAlignment="Bottom"
                Minimum="0"
                Maximum="100"
                ValueChanged="SeekbarSlider_ValueChanged"
                MouseEnter="SeekbarSlider_MouseEnter"
                MouseLeave="SeekbarSlider_MouseLeave"/>

    </Grid>
</Window>
