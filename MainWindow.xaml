<Window x:Class="VideoGadget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoGadget"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" Width="800" 
        Loaded="Window_Loaded" 
        AllowDrop="True" 
        DragOver="Window_DragOver" 
        Drop="Window_Drop" WindowStyle="None"
        ResizeMode="CanResizeWithGrip" AllowsTransparency="True">
    <Grid>
        <MediaElement x:Name="MainMadiaElement" 
                      Margin="1,1,1,1" 
                      MouseDown="MainMadiaElement_MouseDown" 
                      MouseMove="MouseMoveHandler" 
                      MediaEnded="MainMadiaElement_MediaEnded"/>

    </Grid>
</Window>
